{
  "id": "docker-and-mesos-presentation",
  "instances": 2,
  "cpus": 1,
  "mem": 50,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "stigkj/docker-and-mesos-presentation:${TAG}",
      "network": "BRIDGE",
      "portMappings": [
        {
          "servicePort": 28080,
          "containerPort": 80,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "constraints": [
    [ "hostname", "UNIQUE" ]
  ]
}
